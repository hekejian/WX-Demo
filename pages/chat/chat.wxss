.page-wrap {
    display: flex;
    flex-direction: column;
    background: #ebebeb;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    overflow: hidden;
}
.chat-container {
    flex: 1;
    text-align: center;
    overflow-y:auto;
}
.system-message {
    font-size: 14px;
    line-height: 14px;
    color: #fff;
    background: #cecece;
    border-radius: 4px;
    display: inline-block;
    padding: 8rpx 15rpx;
    margin: 30rpx 0 10rpx;

}
.user-message {
    margin: 38rpx 20rpx 0;
    text-align: left;
    font-size: 0;
    display: flex
}
.user-message.me {
    flex-direction: row-reverse;
}
.avatar {
    width: 84rpx;
    height: 84rpx;
    border-radius:50%;
    display: inline-block;
    vertical-align: top;
}
.text {
    display: inline-block;
    vertical-align: top;
}
.user-message.other .text {
    margin-left: 19rpx;
}
.user-message.me .text {
    margin-right: 19rpx;
}
.text .nickname {
    color: #737373;
    font-size: 24rpx;
    margin-bottom: 6rpx;
}
.text .content {
    border: #fff 1rpx solid;
    border-radius: 20rpx;
    background: #fff;
    font-size: 30rpx;
    line-height: 30rpx;
    padding: 20rpx;
    position: relative;
}
.user-message.me .text .content {
    background: #6C5BB7;
    border: #6C5BB7 1rpx solid;
    border-radius: 30rpx;
    color:#fff;
}
.text .content::after,.text .content::before {
    font-size: 0;
    position: absolute;
    width: 0;
    height: 0;
    content: '';
    border: 13rpx dashed transparent;
}

.user-message.other .text .content::after,.user-message.other .text .content::before {
    right: 100%;
    border-right-style: solid;
}
.user-message.other .text .content::before {
    top: 18rpx;
    border-right-color: #fff;
}
.user-message.other .text .content::after {
    border: 12rpx solid transparent;
    top: 19rpx;
    border-right-color: #fff;
}

.user-message.me .text .content::after,.user-message.me .text .content::before {
    left: 100%;
    border-left-style: solid;
}

.user-message.me .text .content::before {
    top: 18rpx;
    border-left-color: #70b44d;
}
.user-message.me .text .content::after {
    border: 12rpx solid transparent;
    top: 19rpx;
    border-left-color: #6C5BB7;
}
.text .content.img {
    border: #ccc 1rpx solid;
    border-radius: 4px;
    background: #fff;
    font-size: 30rpx;
    line-height: normal;
    padding: 10rpx;
    position: relative;
    text-align: center;
    max-width: 560rpx;
}
.text .content.img image {
    max-width: 100%;
}
.me .nickname {
    display: none;
}

@media (max-width : 360px) {
    .avatar {
        width: 100rpx;
        height: 100rpx;
    }
    .text .content {
        border: #ccc 1rpx solid;
        border-radius: 4px;
        background: #fff;
        font-size: 42rpx;
        line-height: 44rpx;
        padding: 20rpx;
        position: relative;
    }
    .user-message.other .text .content::before {
        top: 22rpx;
        border-right-color: #ccc;
    }
    .user-message.other .text .content::after {
        border: 14rpx solid transparent;
        top: 23rpx;
        border-right-color: #fff;
    }

    .user-message.me .text .content::after,.user-message.me .text .content::before {
        left: 100%;
        border-left-style: solid;
    }

    .user-message.me .text .content::before {
        top: 22rpx;
        border-left-color: #6C5BB7;
    }
    .user-message.me .text .content::after {
        border: 14rpx solid transparent;
        top: 23rpx;
        border-left-color: #6C5BB7;
    }

    
}

.navigation{
  background: #6C5BB7;
  width: 100%;
  padding-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  
}
.input-panel {
    width: 100%;
    height: 90rpx;
    padding: 0rpx 20rpx 0;
    background: #f5f5f7;
    border-top:#d7d7d9 1rpx solid;
    box-sizing: border-box;
    display: flex;
}
.pic-icon {
    width: 60rpx;
    height: 44rpx;
    margin: 15rpx 10rpx 0 0;
}
.send-input {
    flex: 1;
    height: 72rpx;
    
    background: #fff;
    border-top-style: none;
    border-left-style: none;
    border-right-style: none;
    border-bottom-style: solid;
    border-color: #6C5BB7;
    border-width: thin;
    border-radius: 3px;
    }
.send-btn {
    width: 116rpx;
    height: 72rpx;
    line-height: 72rpx;
    border-color: #fff;
    background-color: #f5f5f7
}

.user-message.me .textContainer{
    width: 60%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-content: center;
    align-items: center;
    word-wrap: break-word;
    word-break: break-all;
}

.user-message.other .textContainer{
    width: 60%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-content: center;
    align-items: center;
    word-wrap: break-word;
    word-break: break-all;
}
.user-message.other .avatar{
    margin-top: 18rpx;
}
.user-message.other .nickname{
    padding-left: 10rpx;
}