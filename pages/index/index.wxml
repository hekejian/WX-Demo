<view class="container log-list">

<view class="friends">
  <block wx:for-items="{{friends}}" wx:key="{{item.id}}">
    <view id="item.id" class="person" bindtap="openChat">
      <image class="avatar" src="{{userInfo.avatarUrl}}"></image>
      <view class="Text">
        <text class="nickName">{{userInfo.nickName}}</text>
        <text class="info">{{item.lastMessage}}</text>
      </view>
      <view class="time-message">
        <view class="time">{{item.lastTime}}</view>
        <view wx:if="{{item.unreadNumber>0}}" class="messageNumber">
          <text>{{item.unreadNumber}}</text>
        </view>
      </view>
    </view> 
  </block>
</view>
 
 
