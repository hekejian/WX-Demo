.person{
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  padding: 30rpx;
  border-bottom: solid;
  border-width: thin;
  border-color: #F2F2F2;
  
}
.avatar{
  width:80rpx;
  height:80rpx;
  border-radius: 50%; 
  margin-left:10rpx;
  margin-right: 20rpx;
}
.Text{
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.nickName{
  font-weight: bold;
}
.time{
  font-size: 24rpx;
  color: #D0D3D4
}
.info{
  font-weight: 100; 
  font-size: 12px;
  color: #ABB2B9
}
.messageNumber{
  margin-top: 20rpx;
  color: #fff;
  font-size:20rpx;
  height: 25rpx;
  width: 25rpx;
  border-radius: 25rpx;
  background: #DF0101;
}
.time-message{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.messageNumber{
  display: flex;
  flex-direction: column;
  align-items: center;
}