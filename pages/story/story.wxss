.story{
  width: 100%;
  background: #6C5BB7;
  display: flex;
  flex-direction: column;
}
.storyAuthor{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 30rpx 30rpx 10rpx 30rpx;
  border-bottom: solid;
  border-width: thin;
  border-color: #F2F2F2;
}
.avatar1{
  width:85rpx;
  height:85rpx;
  border-radius: 50%; 
  margin-left:10rpx;
  margin-right: 10rpx;
}
.AuthorText{
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.nickName{
  font-weight: bold;
}
.storyTime{
  padding-top: 10rpx;
  font-size: 12px;
  color: #D0D3D4;
}
.storyContent{
    display: flex;
  flex-direction: column;
  align-content: center;
}
.ImageGroup{
  display: flex;
  flex-direction: column;
  align-content: center;
}